<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/onboarding_img_height"
            android:background="@color/colorAccent" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingTop="@dimen/onboarding_padding_txt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_onboarding_one_title"
            android:layout_width="wrap_content"
            android:textSize="@dimen/onboarding_txt_title"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/onboarding_four_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/onboarding_txt_description"
            android:layout_below="@id/txt_onboarding_one_title"
            android:layout_centerHorizontal="true"
            android:text="@string/onboarding_four_description"
            android:textAlignment="center" />

    </RelativeLayout>

</LinearLayout>
