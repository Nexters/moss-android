<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/uiColorMain</item>
        <item name="android:fontFamily">@font/noto_sans_medium</item>
    </style>

    <!-- Onboardig TabTheme -->
    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:textColorPrimary">#226632</item>
        <item name="android:textColorSecondary">#226632</item>
        <item name="colorAccent">#226632</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="text14sp">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <!-- Diary TabTheme -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/uiColorMain</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@color/transparent</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textColorSlate</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#803a4657</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
